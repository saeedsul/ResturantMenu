@inherits TabSetBase

    <CascadingValue Value=this>
        <ul class="nav nav-pills" style="width: 100%;">
            @ChildContent
        </ul>

        <!-- Display body for only the active tab -->
        <div class="tab-content">
            @if (HasActiveTab)
            {
                @ActiveTab?.ChildContent
            }
        </div>
    </CascadingValue>